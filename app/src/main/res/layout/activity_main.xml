<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.n5537.shopnear.MainActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/left_part"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shop4">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    android:id="@+id/shopowner"
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/style_left"
                    android:onClick="slide1"
                    android:layout_alignParentRight="true"
                    android:text="Shopowner"
                    android:textColor="#FFF"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_editor_absoluteX="200dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/right_part"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shop5">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    android:id="@+id/consumer"
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:background="@drawable/style"
                    android:text="Consumer"
                    android:onClick="slide2"
                    android:textColor="#FFF"
                    android:layout_marginTop="160dp"
                    tools:layout_editor_absoluteX="192dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="50dp"
        android:text="I am a"
        tools:layout_editor_absoluteY="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

</android.support.constraint.ConstraintLayout>
